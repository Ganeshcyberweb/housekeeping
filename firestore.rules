rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Staff collection - Primary user data store
    match /staff/{staffId} {
      // All authenticated users can read staff data
      allow read: if request.auth != null;
      
      // Allow staff record creation in these cases:
      // 1. New users creating their own staff record with 'staff' role
      // 2. Any authenticated user can create staff records (managers/admins will be validated at app level)
      allow create: if request.auth != null;
      
      // Users can update their own record
      // Admin/manager permissions verified through role check
      allow update: if request.auth != null;
      
      // Deletion permissions handled at application level
      allow delete: if request.auth != null;
    }
    
    // Shifts collection
    match /shifts/{shiftId} {
      // All authenticated users can read shifts (staff see filtered data in client)
      allow read: if request.auth != null;
      
      // Create and update permissions handled at application level
      // Admin/manager roles verified through staff collection in app code
      allow create, update: if request.auth != null;
      
      // Delete permissions handled at application level (admin only)
      allow delete: if request.auth != null;
    }
    
    // Rooms collection
    match /rooms/{roomId} {
      // All authenticated users can read room data
      allow read: if request.auth != null;
      
      // Write permissions handled at application level
      // Admin/manager roles verified through staff collection in app code
      allow write: if request.auth != null;
    }
  }
}